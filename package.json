{
	"name": "@heiwa4126/md2drupal",
	"version": "0.0.12",
	"type": "module",
	"main": "./dist/converter1.js",
	"types": "./dist/converter1.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/converter1.d.ts",
				"default": "./dist/converter1.js"
			},
			"require": {
				"types": "./dist/converter1.d.ts",
				"default": "./dist/converter1.cjs"
			}
		}
	},
	"bin": {
		"md2drupal": "dist/cli.js"
	},
	"scripts": {
		"cli": "tsx src/cli.ts",
		"build": "tsdown",
		"test": "vitest run",
		"test:run": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"clean": "rm -rf dist",
		"prepublishOnly": "pnpm run lint && pnpm run test && pnpm run clean && pnpm run build && pnpm run smoke-test",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:all": "pnpm pkg fix --loglevel=error && biome format --write . && dprint fmt && textlint --fix \"**/*.md\"",
		"smoke-test:cli": "node dist/cli.js -h",
		"smoke-test:node": "node smoke_test/ex1.mjs && node smoke_test/ex1.cjs && tsx smoke_test/ex1.ts",
		"smoke-test": "run-p smoke-test:*",
		"prepack": "clean-publish-scripts -c",
		"postpack": "clean-publish-scripts -r",
		"ver": "pnpm pkg get version --loglevel=error ",
		"trivy": "trivy config . && trivy fs --exit-code 1 --severity HIGH,CRITICAL .",
		"sbom": "trivy fs --scanners vuln --format spdx-json --output sbom.spdx.json .",
		"osv-scan": "osv-scanner scan -L ./pnpm-lock.yaml",
		"cloc": "cloc $(git ls-files|grep -Fv pnpm-lock.yaml)",
		"lizard": "lizard -EDuplicate -w .",
		"lizard:all": "lizard -EDuplicate .",
		"smells:all": "qlty smells --all --quiet",
		"qlty": "qlty metrics --functions --all --quiet",
		"g": "run-s osv-scan format:all prepublishOnly"
	},
	"keywords": [
		"markdown",
		"drupal",
		"html",
		"converter",
		"unified",
		"remark",
		"rehype",
		"cli"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/heiwa4126/md2drupal.git"
	},
	"bugs": {
		"url": "https://github.com/heiwa4126/md2drupal/issues"
	},
	"homepage": "https://github.com/heiwa4126/md2drupal#readme",
	"license": "MIT",
	"description": "Convert Markdown to Drupal-compatible HTML using the Unified ecosystem (remark/rehype)",
	"files": [
		"dist/**/*.js",
		"dist/**/*.cjs",
		"dist/**/*.d.ts",
		"!dist/**/*.map"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@heiwa4126/clean-publish-scripts": "^0.0.4",
		"@types/escape-html": "^1.0.4",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"@types/node": "^25.0.10",
		"@types/unist": "^3.0.3",
		"@vitest/coverage-v8": "4.0.18",
		"linkedom": "^0.18.12",
		"tsdown": "^0.20.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"commander": "^14.0.2",
		"escape-html": "^1.0.3",
		"npm-run-all2": "^8.0.4",
		"rehype-stringify": "^10.0.1",
		"remark-extract-frontmatter": "^3.2.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.1.0",
		"yaml": "^2.8.2"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
